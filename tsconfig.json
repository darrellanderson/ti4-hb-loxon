{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ES2023", "DOM"],
    "module": "commonjs",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "jsxInTTPG",
    "jsxFragmentFactory": "jsxFrag",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./src/**/*.test.ts"]
}
